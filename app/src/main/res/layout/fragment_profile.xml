<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tukang atau Bukan"
            android:id="@+id/tipee"
            android:textAlignment="center"
            android:textColor="@color/oren"
            android:textSize="32dp"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/PProfile"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/Playout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email\t\t: "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seseorang@website.com"
                    android:id="@+id/Pemail"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama\t\t: "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seseorang"
                    android:id="@+id/Pnama"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No HP\t\t: "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08122222222"
                    android:id="@+id/Pnohp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/btEd"
            android:backgroundTint="@color/oren"
            android:textColor="#ffffff"
            android:id="@+id/btnEd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EdProfile"
            android:orientation="vertical"
            android:gravity="center">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/oren"
                android:hint="Nama Anda"
                android:id="@+id/tnama"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Ednama"
                    android:backgroundTint="@color/oren"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/oren"
                android:id="@+id/thp"
                android:hint="No Handphone"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="12"
                    android:inputType="number"
                    android:id="@+id/Edno"
                    android:backgroundTint="@color/oren"/>

            </com.google.android.material.textfield.TextInputLayout>


            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ms_baseColor="@color/oren"
                app:ms_hintColor="@color/colorAccent"
                app:ms_hint="Jenis Akun"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tpass"
                android:backgroundTint="@color/oren"
                app:passwordToggleEnabled="true"
                android:hint="Password Baru"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/EdPass"
                    android:inputType="textPassword"
                    android:backgroundTint="@color/oren"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/oren"
                app:passwordToggleEnabled="true"
                android:hint="Masukan Password Lama"
                android:id="@+id/told"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/EdOPass"
                    android:inputType="textPassword"
                    android:backgroundTint="@color/oren"/>

            </com.google.android.material.textfield.TextInputLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">
            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="save"
                android:backgroundTint="@color/oren"
                android:textColor="#ffffff"
                android:id="@+id/btnSave"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="batal"
        android:backgroundTint="@color/oren"
        android:textColor="#ffffff"
        android:id="@+id/btnBatal"/>
</LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>